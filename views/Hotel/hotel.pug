// Single room
.singleroom
  .container
    a(href='/hotel/room')
      h3.title  Single rom
    .row.mt-5
      each product in products
        .col-md-4.colum.text-center
          a(href='/detail/'+product._id)
            img(src= product.image, width='100%', height='260px')
          .detail
            h5= product.name
            p=product.address
            span= product.price+"$/"
              span night
    nav.mt-4.mb-5.float-right(aria-label='Page navigation example ')
      ul.pagination
        li.page-item
          a.page-link(href='#', aria-label='Previous')
            span(aria-hidden='true') &laquo;
        li.page-item
          a.page-link(href='/hotel?page=1') 1
        li.page-item
          a.page-link(href='/hotel?page=2') 2
        li.page-item
          a.page-link(href='/hotel?page=3') 3
        li.page-item
          a.page-link(href='#', aria-label='Next')
            span(aria-hidden='true') &raquo;



